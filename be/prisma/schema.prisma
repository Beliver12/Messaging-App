generator client {
  provider = "prisma-client-js"
   previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  
}

model Test {
  id   Int     @id @default(autoincrement())
  name String?
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String @unique
  email    String @unique
  about    String 
  isOnline String?
  image    String?
  Friends Friends[]
  Message Message[]
}

model Friends {
  id       Int    @id @default(autoincrement())
  friendId Int?
  User     User      @relation(fields: [userId], references: [id])
  userId   Int
  status   String?
  UsersInChat UsersInChat[]
}

model Chat {
  id       Int    @id @default(autoincrement())
  Message  Message[]
  UsersInChat UsersInChat[]
}

model Message {
  id       Int    @id @default(autoincrement())
  message  String?
  image    String?
  date     String
  username String
  Chat     Chat   @relation(fields: [chatId], references: [id])
  User     User   @relation(fields: [userId], references: [id])
  chatId   Int
  userId   Int
}

model UsersInChat {
  id       Int    @id @default(autoincrement())
  Friends  Friends   @relation(fields: [friendsId], references: [id])
  Chat     Chat   @relation(fields: [chatId], references: [id])
  chatId   Int
  friendsId   Int
}